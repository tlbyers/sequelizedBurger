<div class="container"> 
  <div class="jumbotron"> 
    <img id="burger" src="/assets/img/burger.png"> 
    <h1> Eat-Da-Burger! </h1>
  </div>

  {{!-- burger list before being eaten --}}
<div class="col-md-4 col-md-offset-1">
  <h2>Which burger would you like?</h2>
   <ol class="list-toEat">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
        <div class="input-group">
          <p class="lead"> {{this.burger_name}} </p>
          <span class="input-group-btn">
            <form action="burgers/devour/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="burger_id" value={{this.id}}>
              <button class="btn btn-default btn-lg" type="submit"> Devour It! </button>
            </form>
          </span>
        </div>
      </li>                               
      {{/unless}}
    {{/each}}
  </ol
</div>    


    {{!-- burger list after being eaten --}}
<div class="col-md-4 col-md-offset-1">  
      <ol class="list-eaten">
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
        <div class="input-group">
          <p class="lead"> {{this.burger_name}} </p>
          <span class="input-group-btn">
            <form action="burgers/devour/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="burger_id" value={{this.id}}>
              
            </form>
          </span>
        </div>
      </li>
      {{/if}}
    {{/each}}
  </ol>
</div>    

  
  <h5> Enter the name of the burger you want to eat. </h5>
<div class="col-md-4 col-md-offset-2">
  {{!-- section to add burgers --}}
  <form class="create-update-form" <form action="/" method="POST">

    <div class="form-group">

      <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
    </div>

    <button id="burgerButton" class="btn btn-default btn-lg" type="submit">Add Burger</button>
  </form>
 </div>
</div>